            {
              "fieldName": "numberOfDescriptions",
              "label": "Text 10",
              "placeholder": "Placeholder",
              "feedback": "Enter valid number.",
              "subtext": "Accepts any value",
              "type": "Number",
              "required": true
            },
            {
              "fieldName": "totalNumberOfItems",
              "label": "Text 11",
              "placeholder": "Placeholder",
              "feedback": "Enter valid number.",
              "subtext": "Accepts any value",
              "type": "Number",
              "required": true
            }
          ]
        }
      ]
    },
    {
      "lookUpBy": "CPS",
      "queryPath": "projects.0.descriptions",
      "findByIndex": true,
      "pages": [
        {
          "pageTitle": "Description",
          "pageName": "description",
          "queryPath": ["projects.0.descriptions", ""],
          "fields": [
            {
              "fieldName": "geometry",
              "label": "Geometry",
              "subtext": "Subtext",
              "options": ["", "Mould", "Coated Item"]
            },
            {
              "fieldName": "description",
              "label": "Description",
              "placeholder": "Placeholder",
              "feedback": "Enter valid number.",
              "subtext": "Accepts any value"
            },
            {
              "fieldName": "ifsActivityCodes",
              "label": "IFS Activity Codes",
              "placeholder": "Placeholder",
              "feedback": "Enter valid number.",
              "unit": "Unit",
              "subtext": "Accepts any value"
            },
            {
              "fieldName": "CPS",
              "label": "CPS",
              "placeholder": "Placeholder",
              "feedback": "Enter valid number.",
              "subtext": "Accepts any value"
            }
          ]
        },
        {
          "type": "file",
          "pageTitle": "Add File",
          "queryPath": ["projects.0.descriptions", "uploadFiles"],
          "pageName": "uploadFile",
          "description": true
        }
      ]
    },
    {
      "chapterAlwaysInWrite": true,
      "firstQueryPath": "projects.0.descriptions",
      "secondQueryPath": "items",
      "pages": [
        {
          "pageTitle": "Add item",
          "pageName": "item",
          "queryPath": ["projects.0.descriptions", "items"],
          "createWithOldValue": true,
          "fields": [
            {
              "fieldName": "itemId",
              "label": "Item ID",
              "subtext": "Subtext"
